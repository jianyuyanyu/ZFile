<UserControl
    x:Class="ZTAppFramework.Admin.Views.UserPererfabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UI="clr-namespace:ZTAppFramework.Template.Control;assembly=ZTAppFramework.Template"
    xmlns:prism="http://prismlibrary.com/">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <UI:ZTCard
            Grid.Row="1"
            Margin="10"
            Padding="0"
            CornerRadius="2"
            Line="0">
            <UI:ZTCard.Header>
                <Grid MinHeight="40">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="Black"
                        Text="语言主题" />
                </Grid>
            </UI:ZTCard.Header>
            <StackPanel Margin="40,50">
                <StackPanel Orientation="Horizontal">
                    <UI:ZTCheckBox
                        CheckBoxStyle="Switch"
                        CheckedContent="白天模式"
                        Content="黑夜模式" />
                </StackPanel>

            </StackPanel>
        </UI:ZTCard>
    </Grid>
</UserControl>
