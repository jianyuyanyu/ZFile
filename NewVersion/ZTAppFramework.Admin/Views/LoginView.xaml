<Window
    x:Class="ZTAppFramework.Admin.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="clr-namespace:ZTAppFrameword.Template.Control;assembly=ZTAppFrameword.Template"
    Width="800"
    Height="600"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ResizeMode="NoResize"
    WindowStyle="None">
    <Grid Background="BlueViolet">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            BorderBrush="Black"
            BorderThickness="1" />

        <Button
            x:Name="BackBtn"
            Grid.Column="1"
            Width="20"
            Height="20"
            Margin="20,2"
            HorizontalAlignment="Right"
            Background="Transparent"
            Content="X" />
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Width="300"
            Height="380"
            Margin="50,0">
            <Border Background="White" CornerRadius="5" />
            <StackPanel Margin="20">
                <TextBlock
                    FontFamily="方正"
                    FontSize="24"
                    FontWeight="Black"
                    Text="登录" />
                <ui:ZTComboBox
                    IsEditable="True"
                    Text="{Binding Login.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Watermark="请输入账号">
                    <ui:ZTComboBoxItem Content="123" />
                    <ui:ZTComboBoxItem Content="323" />
                    <ui:ZTComboBoxItem Content="223" />
                    <ui:ZTComboBoxItem Content="523" />
                </ui:ZTComboBox>

                <TextBox
                    Height="40"
                    Margin="0,10,0,0"
                    VerticalContentAlignment="Center"
                    Text="{Binding Login.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Height="40"
                    Margin="0,10,0,0"
                    VerticalAlignment="Bottom"
                    Command="{Binding ExecuteCommand}"
                    CommandParameter="LoginUser"
                    Content="登录"
                    Cursor="Hand" />
                <CheckBox Margin="0,10,0,0" Content="记住密码" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>
