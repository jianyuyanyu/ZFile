                    <Grid>
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <Border.Effect>
                                <DropShadowEffect Opacity="0.2" ShadowDepth="0" />
                            </Border.Effect>
                        </Border>
                        <Grid Margin="4,0">
